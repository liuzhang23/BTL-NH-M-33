#include <iostream>

using namespace std;	

class DList {
public:
	DList();
	void nhap(DList *a, int &n);
	void xuat(DList *a, int &n);
	void them(DList *a, int &n);
	void sx(DList *a, int n);
private:
	int id;
	int ms;
	int last;	
};

DList::DList() {
	last = -1;
}

void DList::nhap(DList *a, int &n){
	cout<<"nhap n: "; cin>>n;
	for (int i=0; i<n; i++){
		cout<<"sv thu "<<i+1<<endl;
		cout<<"id: ";cin>>a[i].id;
		cout<<"ms: ";cin>>a[i].ms;
		last++;
	}
}

void DList::xuat(DList *a, int &n){
	for (int i=0; i<n; i++){
		cout<<"sv thu "<<i+1<<endl;
		cout<<"id: "<<a[i].id<<endl;
		cout<<"ms: "<<a[i].ms<<endl;
		//cout<<"last: "<<last<<endl;
	}
}

void DList::them(DList *a, int &n){
	cout<<"sv thu "<<last+2<<endl;
	cout<<"id: ";cin>>a[last+1].id;
	cout<<"ms: ";cin>>a[last+1].ms;
	last++;
	n++;
}

void DList::sx(DList *a, int n){
	for (int i=0; i<n-1; i++){
		for (int j=1; j<n; j++){
			if (a[i].ms < a[j].ms){
				DList t = a[i];
				a[i] = a[j];
				a[j] = t;
			}
		}
	}
}

int main(){
	system("color A");
	int n;
	DList *a = new DList[n];
	DList sv;
	sv.nhap(a,n);
	
	cout<<"\n--------------------------------------------\n";
	cout<<"ham xuat:"<<endl;
	sv.xuat(a,n);
	
	cout<<"\n--------------------------------------------\n";
	cout<<"ham them sv:"<<endl;
	sv.them(a,n);
	
	cout<<"\n--------------------------------------------\n";
	cout<<"ham xuat:"<<endl;
	sv.xuat(a,n);
	
	cout<<"\n--------------------------------------------\n";
	cout<<"sau khi sap xep:"<<endl;
	sv.sx(a,n);
	sv.xuat(a,n);
	
	cout<<"\n--------------------------------------------\n";
}
